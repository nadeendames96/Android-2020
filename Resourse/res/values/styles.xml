<resources>
    <!-- Base application theme. -->
<style name="ButtonStyle">
    <item name="android:color">@color/blue</item>
    <item name="android:textColor">@color/orange</item>
    <item name="android:background">#fff</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:layout_margin">30dp</item>
    <item name="android:padding">14dp</item>
</style>
    <style name="ImageView">
        <item name="android:color">@color/blue</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:background">@color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:padding">14dp</item>
    </style>

        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/yellow</item>
            <item name="colorPrimaryDark">@color/redDark</item>
            <item name="colorAccent">@color/colorAccent</item>
            <item name="android:navigationBarColor">@color/redDark</item>
        </style>
        <style name="EditText">
            <item name="android:ems">10</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textSize">15sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:inputType">number</item>
            <item name="android:background">@color/white</item>
            <item name="android:layout_marginTop">15dp</item>
            <item name="android:layout_marginLeft">5dp</item>
            <item name="android:layout_marginRight">5dp</item>
            <item name="android:padding">10dp</item>
            <item name="android:textColorHint">@color/black</item>
            <item name="android:textAllCaps">true</item>
            <item name="android:fontFamily">Arial</item>
        </style>
        <style name="Buttons">
            <item name="android:textColor">@color/white</item>
            <item name="android:textSize">18sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:layout_marginTop">50dp</item>
            <item name="android:padding">20dp</item>
            <item name="android:textAlignment">center</item>
            <item name="android:layout_gravity">center</item>
            <item name="android:fontFamily">Arial</item>
            <item name="android:textAllCaps">true</item>


        </style>
        <style name="TextView">
            <item name="android:textColor">@color/white</item>
            <item name="android:strokeColor">@color/redDark</item>
            <item name="android:strokeWidth">@android:integer/status_bar_notification_info_maxnum</item>
            <item name="android:textSize">20sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:layout_marginTop">30dp</item>
            <item name="android:textAlignment">center</item>
            <item name="android:fontFamily">Arial</item>
            <item name="android:textAllCaps">true</item>


        </style>

</resources>